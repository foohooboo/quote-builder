<%= simple_form_for quote, html: { class: "quote form" } do |quote_form| %>
  <% if quote.errors.any? %>
    <div class="error-message">
      <%= quote.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= quote_form.input :name, input_html: { autofocus: true } %>
  <%= quote_form.submit class: "btn btn--secondary" %>
<% end %>
